{
  "name": "api",
  "version": "0.0.0",
  "description": "",
  "author": "mauricio",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean": "rm -rf .turbo node_modules dist",
    "db:setup:dev": "docker compose up -d",
    "db:migration:dev": "prisma migrate dev",
    "db:seed": "ts-node ./prisma/seed-data.ts",
    "db:seed-dev": "ts-node ./prisma/seed-data.dev.ts",
    "db:studio": "npx prisma studio",
    "prisma:generate": "prisma generate",
    "db:migrate:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@apollo/server": "4.9.3",
    "@aws-sdk/client-s3": "3.433.0",
    "@aws-sdk/s3-request-presigner": "3.433.0",
    "@aws-sdk/client-cloudwatch-logs": "3.462.0",
    "@clerk/clerk-sdk-node": "4.12.5",
    "@nestjs/apollo": "12.0.9",
    "@nestjs/common": "10.0.0",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.0.0",
    "@nestjs/graphql": "12.0.9",
    "@nestjs/platform-express": "10.0.0",
    "@prisma/client": "5.3.1",
    "graphql": "16.8.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "uuid": "9.0.1",
    "winston": "3.11.0",
    "winston-cloudwatch": "6.2.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "10.0.0",
    "@nestjs/schematics": "10.0.0",
    "@nestjs/testing": "10.0.0",
    "@sentry/node": "7.70.0",
    "@sentry/tracing": "7.70.0",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.2",
    "@types/node": "20.3.1",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "eslint": "8.42.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.5.0",
    "prettier": "3.0.3",
    "prisma": "5.3.1",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "tsconfig-paths": "4.2.0",
    "@necterine/tsconfig": "*"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
